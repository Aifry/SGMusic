<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/loadin_new"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.a97263.musicplayer.LoginActivity">
    <LinearLayout
        android:gravity="center"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <EditText
            android:id="@+id/text_uname_login"
            android:hint="Username"
            android:layout_width="200dp"
            android:layout_height="wrap_content" />
        <EditText
            android:id="@+id/text_pwd_login"
            android:hint="Password"
            android:layout_width="200dp"
            android:layout_height="wrap_content" />
        <TableLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TableRow>
                <Button
                android:id="@+id/login_btu"
                android:background="@null"
                android:onClick="loginBtu"
                android:text="Login"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
                <Button
                    android:id="@+id/login_reg"
                    android:background="@null"
                    android:onClick="registerBtu_login"
                    android:text="Register"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </TableRow>
        </TableLayout>
    </LinearLayout>

</android.support.constraint.ConstraintLayout>
